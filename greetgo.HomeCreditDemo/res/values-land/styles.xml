<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="KaruselItem" parent="AppBaseTheme">
        <item name="android:background">@drawable/rounder_corners_bg</item>
    </style>
    <style name="KaruselText" parent="AppBaseTheme">
        <item name="android:paddingTop">5sp</item>
        <item name="android:textSize">12sp</item>
        </style>
    <style name="Wall" parent="AppBaseTheme">
        <item name="android:background">#FF0000</item>
    </style>
    
    <style name="EntryText" parent="AppBaseTheme">
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/entry_text_border</item>
    </style>
    <style name="EnterButton" parent="AppBaseTheme">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/enter_button_border</item>
    </style>
    <style name="NakedButton" parent="AppBaseTheme">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/naked_bg</item>
    </style>
    <style name="BottomBanner" parent="AppBaseTheme">
        
    </style>
    
</resources>
