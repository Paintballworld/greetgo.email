<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/changePasswordTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="false"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:adjustViewBounds="true"
        android:baselineAlignBottom="false"
        android:clickable="false"
        android:contentDescription="@string/bandDescription"
        android:scaleType="center"
        android:src="@drawable/top" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonChangePassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/changePasswordTop"
        android:background="#FFFFFF"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TextView
            android:id="@+id/newagainPasswordTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/newPasswordText"
            android:layout_alignParentTop="true"
            android:text="@string/title_new_password" />

        <EditText
            android:id="@+id/newPasswordText"
            style="@style/EntryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/newagainPasswordTitle"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/againPasswordTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/againPasswordText"
            android:layout_below="@+id/newPasswordText"
            android:layout_marginTop="16dp"
            android:text="@string/title_again_password" />

        <EditText
            android:id="@+id/againPasswordText"
            style="@style/EntryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/newPasswordText"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/againPasswordTitle"
            android:ems="10"
            android:inputType="textPassword" />

    </RelativeLayout>

    <Button
        android:id="@+id/buttonChangePassword"
        style="@style/EnterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="@string/change_password_caption" />

</RelativeLayout>